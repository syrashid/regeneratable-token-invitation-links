<%- if controller_name != 'sessions' %>
  <% if @group %>
    <%= link_to "Log in", new_session_path(resource_name, invite_token: @group.invite_token), class: "btn btn-outline-primary btn-block mb-3" %>
  <% else %>
    <%= link_to "Log in", new_session_path(resource_name), class: "btn btn-outline-primary btn-block mb-3" %>
  <% end %>
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "Sign up", new_registration_path(resource_name), class: "btn btn-outline-primary btn-block" %>
<% end %>

